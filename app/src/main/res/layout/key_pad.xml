<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:fontFamily="@font/google"
                android:id="@+id/seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:layout_weight="1"
                android:text="7"
                android:textSize="25sp" />

            <Button
                android:fontFamily="@font/google"
                android:id="@+id/eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:layout_weight="1"
                android:text="8"
                android:textSize="25sp" />

            <Button
                android:fontFamily="@font/google"
                android:id="@+id/nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:layout_weight="1"
                android:text="9"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:fontFamily="@font/google"
                android:id="@+id/four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:layout_weight="1"
                android:text="4"
                android:textSize="25sp" />

            <Button
                android:fontFamily="@font/google"
                android:id="@+id/five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:layout_weight="1"
                android:text="5"
                android:textSize="25sp" />

            <Button
                android:fontFamily="@font/google"
                android:id="@+id/six"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:layout_weight="1"
                android:text="6"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:fontFamily="@font/google"
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:layout_weight="1"
                android:text="1"
                android:textSize="25sp" />

            <Button
                android:fontFamily="@font/google"
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:layout_weight="1"
                android:text="2"
                android:textSize="25sp" />

            <Button
                android:fontFamily="@font/google"
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:layout_weight="1"
                android:text="3"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:layout_weight="1"
                android:textColor="@color/red"
                android:text="del"
                android:textSize="20sp" />

            <Button
                android:fontFamily="@font/google"
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:layout_weight="1"
                android:text="0"
                android:textSize="23sp" />

            <Button
                android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:textColor="@color/green"
                android:layout_weight="1"
                android:text="Ok"
                android:textSize="20sp" />


        </LinearLayout>
    </LinearLayout>
</layout>